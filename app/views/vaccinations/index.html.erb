<p id="notice"><%= notice %></p>

<h1>Vaccinations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dose number</th>
      <th>Date</th>
      <th>Kid</th>
      <th>Nurse</th>
      <th>Vaccine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vaccinations.each do |vaccination| %>
      <tr>
        <td><%= vaccination.name %></td>
        <td><%= vaccination.dose_number %></td>
        <td><%= vaccination.date %></td>
        <td><%= vaccination.kid_id %></td>
        <td><%= vaccination.nurse_id %></td>
        <td><%= vaccination.vaccine_id %></td>
        <td><%= link_to 'Show', vaccination %></td>
        <td><%= link_to 'Edit', edit_vaccination_path(vaccination) %></td>
        <td><%= link_to 'Destroy', vaccination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

